@model IEnumerable<classroombooking.DataCreate.Booking>

@{
    ViewData["Title"] = "Booking";
}
<link href="~/css/stylesheet.css" rel="stylesheet" />
<h1>Booking
    <a class="btn btn-primary" asp-action="Create"><i class="bi bi-file-plus"></i>New Booking</a>
</h1>


<div class="table-wrapper-scroll-y my-custom-scrollbar">
    <table class="table table-bordered table-striped mb-0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
         @*    <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.Lecturers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rooms)
            </th>
          
      @*       <th></th> *@
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
        @*     <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.Lecturers.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rooms.Name)
            </td>

             
            <td>
                    
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-card-text"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3-fill"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
