@model ClassRoom.Models.Room_Booking.Booking

@{
    ViewData["Title"] = "Create";
}
<link href="~/css/stylesheet.css" rel="stylesheet" />
<h1 style="display:flex;justify-content:center;">Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SlotId" class="control-label"></label>
                <select asp-for="SlotId" class ="form-control" asp-items="ViewBag.SlotId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Class_Date" class="control-label"></label>
                <input asp-for="Class_Date" class="form-control" />
                <span asp-validation-for="Class_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomId" class="control-label"></label>
                <select asp-for="RoomId" class ="form-control" asp-items="ViewBag.RoomId"></select>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary m-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

