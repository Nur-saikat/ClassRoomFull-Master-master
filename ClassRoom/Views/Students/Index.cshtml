@model IEnumerable<classroombooking.DataCreate.Student>

@{
    ViewData["Title"] = "Student information";
}
<link href="~/css/stylesheet.css" rel="stylesheet" />


<h1>
    Student information

    <a class="btn btn-primary" asp-action="Create"><i class="bi bi-file-plus"></i>New Student</a>
    <a class="btn btn-primary" asp-controller="StudentCourses"><i class="bi bi-file-plus"></i>Add Courses</a>

</h1>
<div class="table-wrapper-scroll-y my-custom-scrollbar">
    <table class="table table-bordered table-striped mb-0">
    <thead>
        <tr>
            <th>
               Student Id
            </th>
            <th>
                FirstName
            </th>
            <th>
                    Last Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                    Date Of Birth
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
            </td>
            <td>

                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-distribute-vertical"></i></a> |
                        <a asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-card-text"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3-fill"></i></a>
            </td>
        </tr>
}
    </tbody>
    </table>
</div>